<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- ボタンが押されている -->
	<!-- フォーカスされていない -->
	<item android:state_pressed="true" android:state_focused="false">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#CCFF99"
						android:centerColor="#00FF00" android:endColor="#CCFF99"
						android:angle="270" android:type="linear" />
					<corners android:radius="20dp" />
					<stroke android:width="5dip" android:color="#000000" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- ボタンが押されていない -->
	<!-- フォーカスされていない -->
	<item android:state_pressed="false" android:state_focused="false">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#CCFF99"
						android:centerColor="#00FF00" android:endColor="#CCFF99"
						android:angle="270" android:type="linear" />
					<corners android:radius="20dp" />
					<stroke android:width="0.5dip" android:color="#000000" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- ボタンが押されている -->
	<!-- フォーカスされた -->
	<item android:state_pressed="true" android:state_focused="true">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#CCFF99"
						android:centerColor="#00FF00" android:endColor="#CCFF99"
						android:angle="270" android:type="linear" />
					<corners android:radius="20dp" />
					<stroke android:width="5dip" android:color="#000000" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- ボタンが押されていない -->
	<!-- フォーカスされた -->
	<item android:state_pressed="false" android:state_focused="true">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#CCFF99"
						android:centerColor="#00FF00" android:endColor="#CCFF99"
						android:angle="270" android:type="linear" />
					<corners android:radius="20dp" />
					<stroke android:width="0.5dip" android:color="#000000" />
				</shape>
			</item>
		</layer-list>
	</item>

</selector>